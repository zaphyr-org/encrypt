{
    "name": "zaphyr-org/encrypt",
    "description": "A convenient interface for encrypting and decrypting text via OpenSSL using AES-128 and AES-256 encryption.",
    "keywords": [
        "encrypt",
        "opensll",
        "security"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "merloxx",
            "email": "merloxx@zaphyr.org",
            "homepage": "https://merloxx.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Zaphyr\\Encrypt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zaphyr\\EncryptTests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR2 -n src",
        "cbf": "phpcbf --standard=PSR2 -n src",
        "unit": "phpunit --colors=always",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 512M",
        "test": [
            "@unit",
            "@phpstan",
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
